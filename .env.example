# Environment variables for Multimodal RAG API
# Copy this file to .env and modify as needed

# API Configuration
RAG_API_HOST=0.0.0.0
RAG_API_PORT=8000
RAG_API_RELOAD=true
RAG_API_LOG_LEVEL=info

# Agent Configuration
RAG_API_CONFIG_PATH=config.yaml
RAG_API_MODEL_NAME=llama3.2
RAG_API_OLLAMA_BASE_URL=http://localhost:11434

# Upload Configuration
RAG_API_UPLOAD_DIR=uploads
RAG_API_MAX_FILE_SIZE=104857600
RAG_API_ENABLE_BACKGROUND_PROCESSING=true

# CORS Configuration
RAG_API_CORS_ORIGINS=["*"]
RAG_API_CORS_ALLOW_CREDENTIALS=true